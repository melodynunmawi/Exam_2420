server {
        listen 80;
        listen [::]:80;

        root /var/www/143.110.153.152/html;
        index index.html;

        server_name 143.110.153.152;

        location / {
                try_files $uri $uri/ =404;
        
	}
	
	location /api{
	proxy_pass http://143.110.153.152:5050/api;
  	proxy_buffering off;
  	proxy_set_header X-Real-IP $remote_addr;
  	proxy_set_header X-Forwarded-Host $host;
	proxy_set_header X-Forwarded-Port $server_port;
	}
	
}
